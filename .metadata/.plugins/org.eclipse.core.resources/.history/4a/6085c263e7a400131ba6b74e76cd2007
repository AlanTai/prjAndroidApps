package fragments;

import com.exshipper.prjexshipperbarcodereader.R;

import android.os.Bundle;
import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;
import android.widget.Button;
import android.widget.EditText;

public class LoginFragment extends FragmentTemplate{

	@Override
	public void onCreate(Bundle savedInstanceState) {
		// TODO Auto-generated method stub
		setHasOptionsMenu(false);
		initXMLcomponents();
		super.onCreate(savedInstanceState);
	}

	@Override
	public View onCreateView(LayoutInflater inflater, ViewGroup container,
			Bundle savedInstanceState) {
		// TODO Auto-generated method stub
		View mView = inflater.inflate(R.layout.login_fragment, container, false);
		return mView;
	}
	
	//XML components
	EditText editTxtAccount= null;
	EditText editTxtPassword = null;
	Button btnSubmit = null;
	
	private void initXMLcomponents(){
		editTxtAccount = (EditText) getView().findViewById(R.id.editTxtAccount);
		editTxtPassword = (EditText) getView().findViewById(R.id.editTxtPassword);
	}

}
