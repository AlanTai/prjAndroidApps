package fragments;

import com.exshipper.prjexshipperbarcodereader.R;

import android.support.v4.app.Fragment;
import android.support.v4.app.FragmentManager;
import android.support.v4.app.FragmentTransaction;

public class FragmentTemplate extends Fragment{
	//
	private static final int EXSHIPPER_LOGIN = 0x0;
	private static final int EXSHIPPER_SPEARNET_PACKAGES_PICKUP_HANDLER = 0x1;
	private static final int EXSHIPPER_TW_CUSTOM_ENTRY_PACKAGES_HANDLER = 0x2;
	
	private int currentTabHandler;
	
	public void gotoLogin(){
		//go to login view
		if(currentTabHandler != EXSHIPPER_LOGIN){
			currentTabHandler = EXSHIPPER_LOGIN;
			
			//toggle fragment content
			FragmentManager fm = getFragmentManager();
			if(fm != null){
				FragmentTransaction ft = fm.beginTransaction();
				ft.replace(R.id.fragment_content, new LoginFragment());
				ft.commit();
			}
		}
	}
	public void gotoPackagesPickupHandler(){
		
	}
	public void gotoTWCustomEntryPackagesHandler(){
		
	}
	
	
}
